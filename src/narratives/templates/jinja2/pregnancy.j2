{% from "utility-fragments.j2" import codeableConcept, renderValue, concat, renderEffective, narrative_link_id, safe_concat %}

{# Pregnancy #}
<h5>Pregnancy</h5>
<table class="hapiPropertyTable">
  <thead>
    <tr>
      <th>Code</th>
      <th>Result</th>
      <th>Comments</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    {% for entry in resource.entry %}
      {% set obs = entry.resource %}
      {% if obs.resourceType != 'Composition' %}
        {% if obs.extension is defined and obs.extension %}
          {% set extension = obs.extension | selectattr('url', 'equalto', 'http://hl7.org/fhir/StructureDefinition/narrativeLink') | map(attribute='value.value') | list | first %}
        {% else %}
          {% set extension = None %}
        {% endif %}
        <tr id="{{ narrative_link_id(extension) }}">
          <td>{{ codeableConcept(obs.code, 'display') }}</td>
          <td>{{ renderValue(obs.value) }}</td>
          <td>{{ safe_concat(obs.note, 'text') }}</td>
          <td>{{ renderEffective(obs.effective) }}</td>
        </tr>
      {% endif %}
    {% endfor %}
  </tbody>
</table>
