{
  "name": "@imranq2/fhirpatientsummary",
  "version": "x.x.x",
  "description": "A template for creating npm packages using TypeScript and VSCode",
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.js",
  "exports": {
    "import": "./lib/esm/index.js",
    "require": "./lib/cjs/index.cjs"
  },
  "types": "./lib/cjs/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "type": "module",
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json && npm run rename-cjs && npm run create-cjs-package",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "rename-cjs": "find ./lib/cjs -name '*.js' -exec sh -c 'mv \"$1\" \"${1%.js}.cjs\"' _ {} \\;",
    "create-cjs-package": "echo '{\"type\":\"commonjs\"}' > ./lib/cjs/package.json",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --ext .ts --fix",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/icanbwell/fhir-patient-summary.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Imran Qureshi",
    "email": "imranq2@users.noreply.github.com",
    "url": "https://github.com/icanbwell/fhir-patient-summary"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "commitizen",
    "semantic-release",
    "codecov"
  ],
  "bugs": {
    "url": "https://github.com/icanbwell/fhir-patient-summary/issues"
  },
  "homepage": "https://github.com/icanbwell/fhir-patient-summary#readme",
  "dependencies": {
    "turndown": "^7.2.0",
    "luxon": "^3.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/jest": "^30.0.0",
    "@types/js-beautify": "^1.14.3",
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.0.3",
    "@types/prettier": "^3.0.0",
    "@types/turndown": "^5.0.5",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "js-beautify": "^1.15.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
